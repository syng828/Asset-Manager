<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!-- Main View. Acts as a navigation bar to switch between pages. -->

<HBox fx:id="mainBox" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.MainController">
   <children>
      <AnchorPane fx:id="mainPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #3299a8;">
         <children>
            <Button fx:id="addCategoryBtn" layoutX="38.0" layoutY="83.0" mnemonicParsing="false" onAction="#goToAddCategory" prefHeight="26.0" prefWidth="112.0" text="Add Category" />
            <Button fx:id="homeBtn" layoutX="14.0" layoutY="23.0" mnemonicParsing="false" onAction="#goToHome" text="Home" />
            <Button fx:id="addLocationBtn" layoutX="38.0" layoutY="185.0" mnemonicParsing="false" onAction="#goToAddLocation" prefHeight="30.0" prefWidth="112.0" text="Add Location" />
            <Button fx:id="browseLocationButton" layoutX="38.0" layoutY="220.0" mnemonicParsing="false" onAction="#goToBrowseLocation" prefHeight="31.0" prefWidth="130.0" text="Browse Locations" />
            <Button fx:id="addAssetBtn" layoutX="38.0" layoutY="281.0" mnemonicParsing="false" onAction="#goToAddAsset" prefHeight="30.0" prefWidth="112.0" text="Add Asset" />
            <Button fx:id="editAssetButton1" layoutX="38.0" layoutY="322.0" mnemonicParsing="false" onAction="#goToEditAsset" prefHeight="26.0" prefWidth="112.0" text="Search Asset" />
            <Button fx:id="expiredAssetsBtn" layoutX="38.0" layoutY="363.0" mnemonicParsing="false" onAction="#goToExpiredAssets" prefHeight="30.0" prefWidth="112.0" text="Expired Assets" />
            <Label layoutX="25.0" layoutY="53.0" text="Category" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="27.0" layoutY="151.0" text="Location" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="29.0" layoutY="251.0" text="Asset" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="browseCategoryButton" layoutX="35.0" layoutY="120.0" mnemonicParsing="false" onAction="#goToBrowseCategory" prefHeight="31.0" prefWidth="141.0" text="Browse Categories" />
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="400.0" prefWidth="400.0" />
   </children>
</HBox>
